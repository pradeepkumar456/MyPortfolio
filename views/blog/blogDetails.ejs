<%- include('../layouts/flash') %>
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-11">
      <div class="bg-white border rounded-3 shadow-sm p-4">

        <!-- Blog Title -->
        <h1 class="mb-3 fw-bold text-primary-emphasis" style="font-size: 2rem;">
          <%= blog.title %>
        </h1>
        <hr>
        <!-- Posted Date -->
        <p class="text-muted small mb-4">
          <i class="bi bi-calendar-event"></i>
          Posted on <%= blog.createdAt.toDateString() %>
        </p>

        <!-- Blog Content -->
        <div style="white-space: pre-wrap; line-height: 1.8; font-size: 1.05rem;" class="mb-4">
          <%= blog.content %>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex flex-wrap gap-3">
          <!-- Delete Form -->
          <form action="/pradeepkumar/blog/<%= blog._id %>/delete" method="POST">
            <button class="btn btn-outline-danger">
              üóëÔ∏è Delete Blog
            </button>
          </form>
        
        

          <!-- Back to Blogs -->
          <a href="/pradeepkumar/blog" class="btn btn-outline-primary">
            ‚Üê Back to All Blogs
          </a>
        </div>

      </div>
    </div>
  </div>
</div>
