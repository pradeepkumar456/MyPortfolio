<%- include('../layouts/flash') %>
<style>
  .blog-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }
</style>

<div class="container my-4">
  <h2 class="text-center mb-4 mt-3" style="background-color: #ffe4c4;">Latest Blogs</h2>

  <div class="row">
    <% blogs.forEach(blog => { %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card blog-card h-100 bg-white text-dark shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text">
              <%= blog.content.substring(0, 120) %>...
            </p>
            <div class="mt-auto">
              <a href="/pradeepkumar/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm">
                Read More
              </a>
            </div>
          </div>
          <div class="card-footer text-muted text-end">
            <small>Posted on <%= blog.createdAt.toDateString() %></small>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
