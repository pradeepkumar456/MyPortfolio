<% if (success && success.length > 0) { %>
  <div class="container mt-3">
    <div class="alert alert-success alert-dismissible fade show text-center mx-auto col-12 col-md-8 col-lg-6" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="container mt-3">
    <div class="alert alert-danger alert-dismissible fade show text-center mx-auto col-12 col-md-8 col-lg-6" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>
